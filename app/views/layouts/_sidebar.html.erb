<div class="mt-4">
  <div>
    <%= search_form_for @q, url: search_posts_path do |f| %>
      <%= f.search_field :caption_cont, required: true, placeholder:"キーワードを入力", class:"form-control" %>
      <%= f.submit '検索', class:"btn-sm" %>
    <% end %>
  </div>
  
  <div class="mt-5">
    <h4>ハッシュタグ</h4>
    <table class='table table-borderless'>
      <% @hashtags.each do |hashtag| %>
        <tr>
    	    <td>
    	      <%= link_to "##{hashtag.name}", "/posts/hashtag/#{hashtag.name.delete("#")}" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<p class='text-center'>© 2021 MARINA ISHIKAWA</p>

<!DOCTYPE html>
<html>
  <head>
    <title>DownToEarth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome-animation/0.0.10/font-awesome-animation.css" type="text/css" media="all" />
  </head>

  <body>
    <!--フッター位置設定用-->
    <div class="wrapper">
      <!--ヘッダー-->
      <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light">
          <div class="container-fluid">
            <!--ロゴ-->
            <div class="center">
              <%= link_to image_tag("logo-line.jpg", width: "250px"), root_path, class:"navbar-brand" %>
            </div>

            <!--ハンバーガーメニュー時のボタン-->
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <!--ハンバーガーメニューの要素-->
            <div class="collapse navbar-collapse flex-column" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto mr-5 pr-4 d-flex align-items-center">
                <% unless %w[new_user_session new_user_registration].any? { |name| current_page?(send("#{name}_path")) } %>
                  <%= render "layouts/header_search" %>
                <% end %>

                <% if user_signed_in? %>
                  <%= render "layouts/header_sign_in" %>
                <% else %>
                  <%= render "layouts/header_sign_out" %>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </header>

      <main>
        <!--フラッシュメッセージ-->
        <p class="notice_explanation"><%= notice %></p>
        <p class="alerta_explanation"><%= alert %></p>

        <%= yield %>

        <!--TOPへ戻るボタン-->
        <%= render "layouts/back_btn" %>
      </main>
    </div>
  </body>
</html>

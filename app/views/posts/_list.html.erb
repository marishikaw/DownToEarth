<div class="card-list-container py-5">
  <% posts.each do |post| %>
    <div class="card mx-auto mt-4 shadow-lg">
      <%= link_to post_path(post.id) do %>
        <% post.post_images.first(1).each do |image| %>
          <%= attachment_image_tag image, :image, class:"card-img-top"; %>
        <% end %>
      <% end %>

      <div class="card-body">
        <div class="row">

          <%= link_to user_path(post.user.id) do %>
            <div class="col-2 user_icon">
              <%= attachment_image_tag post.user, :icon, :fill, 60, 60, fallback: "no-image-icon.jpg", size:'60x60', class:"mt-3 rounded-circle"; %>
            </div>
            <div class="col-10">
              <span class="card-title"><%= post.user.name %></span>
          <% end %>

          <!--いいね機能非同期通信-->
          <span id="favorite-btn_<%= post.id %>" class="card-text">
            <%= render "favorites/favorite-btn", post: post %>
          </span>

          <span>
            <% post.tags.each do |tag| %>
             <%= tag.name %>
            <% end %>
          </span>

          <p class="card-text">
            <%= link_to post_path(post.id) do %>
              <%= post.caption %>
            <% end %>
          </p>

          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 px-5 px-sm-0 mx-auto">
    
    <%= form_with model:@post, local:true do |f| %>
      <%= render 'layouts/errors', obj: @post %>
     <div class="form-group">
        <%= f.attachment_field :post_images_images, multiple: true, class: "form-control-file" %>
      </div>
      <div class="form-group">
        <%= f.text_area :caption, placeholder:"キャプション", class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.submit 'シェア', class: 'submit' %>
      </div>
    <% end %>
  </div>
</div>
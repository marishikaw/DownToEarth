<%= form_with model:post do |f| %>
  <%= render "layouts/errors", obj: post %>

  <div class="form-group pb-2 mx-5">
    <%= f.attachment_field :post_images_images, multiple: true, class: "form-control-file" %>
  </div>
  <div class="form-group pb-2 mx-5">
    <%= f.text_area :caption, :size=>"60x10", placeholder:"キャプション", class: "form-control name" %>
  </div>
  <div class="form-group text-center">
    <%= f.submit "シェア", class: "btn-lg" %>
  </div>
<% end %>

<div class="card-list-container py-5">
	<% if user_signed_in? %>
		<div>
			<div class="far fa-plus-square fa-3x nav-link ml-2 faa-pulse animated-hover" data-toggle="modal" data-target="#postModalScrollable"></div>
			<%= render "posts/new", post: @post_new %>
		</div>
	<% end %>

	<div>
	  <%= link_to "", posts_path, class:"fas fa-images fa-3x nav-link ml-2 faa-pulse animated-hover" %>
	</div>

	<div>
	  <%= link_to "", users_path, class:"far fa-handshake fa-3x nav-link ml-2 faa-pulse animated-hover" %>
	</div>
</div>

<% post.comments.each do |comment| %>
  <% comment_user = comment.user %>
  <%= link_to user_path(comment_user), class: "user_#{comment_user.id}" do %>
    <div  class="user_icon_s">
      <%= attachment_image_tag comment.user, :icon, :fill, 30, 30, fallback: "no-image-icon.jpg", size:'30x30' %>
    </div>
    <%= comment.user.name %>
  <% end %>
  
  <%= comment.comment %><%= comment.created_at.strftime('%Y/%m/%d') %>
  <% if comment.user == current_user %>
    <div>
      <% if comment.user == current_user %>
        <%= link_to "削除", post_comment_path(comment.post_id, comment.id), method: :delete, remote: true, data: { confirm: '本当に消しますか？' } %>
      <% end %>
    </div>
  <% end %>
<% end %>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <div class="user_icon">
      <%= attachment_image_tag(@user, :icon, :fill, 100, 100, fallback: "no-image-icon.jpg") %>
    </div>  

    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
     <div class="form-group">
        <%= f.attachment_field :icon, class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit '変更を保存', class: 'submit' %>
      </div>
      <div class="form-group">
        <%= link_to "アカウントを削除", confirm_unsubscribe_path ,class:"btn btn-outline-danger ml-5"%>
      </div>
    <% end %>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= attachment_image_tag(@user, :icon, :fill, 100, 100, fallback: "no_image.jpg") %>
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
     <div class="form-group">
        <%= f.attachment_field :icon_id, class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-info' %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'layouts/footer' %>
<div class="container">
	<div class="row">
		<div class="col-lg-9">
			<div>
				<div class="user_icon">
		      <%= attachment_image_tag(@user, :icon, :fill, 100, 100, fallback: "no-image-icon.png", size:'100x100') %>
		    </div>
				<div class="col">
					<table class="table table-borderless">
						<tr>
							<td>
								<%= @user.name %>
							</td>
							<td>
								<!--フォローボタンの表示の制限-->
						    <% if @user != current_user && current_user.present? %>
						      <% if current_user.following?(@user) %>
						      	<%= link_to "フォロー中", user_relationships_path(@user.id), method: :delete, class: "btn btn-outline-secondary" %>
						      <% else %>
						        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-info text-light" %>
						      <% end %>
						    <% end %>
							</td>
							<td>
								<% if @user == current_user %>
									<%= link_to '編集', edit_user_path(@user), class: "btn btn-sm btn-outline-secondary edit_post_#{@user.id}" %>
								<% end %>
							</td>
						</tr>
						
						<tr>
							<td>
								<P>投稿<%= @posts.count %>件</P>
							</td>
							<td>
								<P>フォロワー<%= link_to @user.followers.count, user_followers_path(@user.id) %>人</P>
							</td>
							<td>
								<P>フォロー中<%= link_to @user.followings.count, user_followings_path(@user.id) %>人</P>
							</td>
						</tr>
						<tr>
							<td colspan="3">
								<%= @user.introduction %>
							</td>
						</tr>
					</table>
		    </div>
		  </div>
			<%= render 'posts/list', posts: @posts %>
		</div>

		<div class="col-lg-3">
			<%= render 'layouts/sidebar' %>
		</div>
	</div>
</div>
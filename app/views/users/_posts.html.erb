<div class="scroll-list jscroll">
  <div class="card-list-container-fluid pt-3">
    <div class="row">
      <% posts.each do |post| %>
        <div class="card col-lg-3 col-md-7 mb-4 shadow-md">
          <!--投稿画像-->
          <div class="image-effect">
            <%= link_to post_path(post.id) do %>
              <% post.post_images.first(1).each do |image| %>
                <%= attachment_image_tag image, :image, class:"card-img-top" %>
              <% end %>
              
            	<div class="mask">
            		<div class="image-contents">
                  <p class="fas fa-heart mr-1">
                    <%= post.favorites.count %>
                  </p>
                  <p class="fas fa-comment">
                    <%= post.comments.count %>
                  </p>
            		</div>
            	</div>
            <% end %>
          </div>

          <div class="card-body">
            <div class="card-text">
              <%= render_with_hashtags(post.caption) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!--無限スクロール-->
  <%= paginate posts %>
</div>

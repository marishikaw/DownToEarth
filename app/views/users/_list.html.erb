<table class="table table-borderless">
  <% users.each do |user| %>
    <tr>
	    <td class="user_icon">
	      <%= link_to user_path(user) do %>
        	<%= attachment_image_tag(user, :icon, :fill, 60, 60, fallback: "no-image-icon.png", size:"60x60") %>
        <% end %>
      </td>
	    <td>
	      <%= link_to user_path(user) do %>
          <%= user.name %>
        <% end %>
        <br>
        <%= user.introduction %>
      </td>
			<td>
				<!--フォローする/フォロー中ボタンの非同期通信-->
		    <% if user != current_user && current_user.present? %>
          <div id="relationship-btn_<%= user.id %>" class="card-text">
            <%= render "relationships/relationship-btn", user: user %>
          </div>
		    <% end %>
			</td>
    </tr>
  <% end %>
</table>
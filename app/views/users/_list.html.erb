<table class='table table-borderless'>
  <% users.each do |user| %>
    <tr>
	    <td class="user_icon">
	      <%= link_to user_path(user) do %>
        	<%= attachment_image_tag(user, :icon, :fill, 60, 60, fallback: "no-image-icon.jpg", size:'60x60') %>
        <% end %>
      </td>
	    <td>
	      <%= link_to user_path(user) do %>
          <%= user.name %>
        <% end %>
        <br>
        <%= user.introduction %>
      </td>
			<td>
				<!--フォローボタンの表示制限-->
		    <% if user != current_user && current_user.present? %>
		      <% if current_user.following?(user) %>
		      	<%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-secondary" %>
		      <% else %>
		        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-info text-light" %>
		      <% end %>
		    <% end %>
			</td>
    </tr>
  <% end %>
</table>
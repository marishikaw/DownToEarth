<% if current_user.following?(user) %>
	<%= link_to "フォロー中", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-outline-secondary" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user), method: :post, remote: true, class: "btn btn-info text-light" %>
<% end %>
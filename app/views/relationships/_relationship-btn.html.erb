<% if current_user.following?(user) %>
  <%= link_to "フォロー中", user_relationships_path(user), method: :delete, remote: true, type:"button", class:"btn-md-gray" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user), method: :post, remote: true, type:"button", class: "btn-md" %>
<% end %>
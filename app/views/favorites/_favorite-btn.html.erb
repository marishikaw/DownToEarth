<% if post.favorited_by?(current_user) %>
	<%= link_to " いいね！ #{post.favorites.count}件", post_favorites_path(post), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to " いいね！ #{post.favorites.count}件", post_favorites_path(post), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>
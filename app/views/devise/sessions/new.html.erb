<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス" , autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder:"パスワード", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<p>アカウントをお持ちでないですか？　<%= link_to "登録する", new_user_registration_path %></p>
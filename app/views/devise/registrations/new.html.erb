<%= render "devise/shared/error_messages", resource: resource %>

<h3>アカウントを作成</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス" , autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.text_field :name, placeholder:"ユーザーネーム"  %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder:"パスワード" , autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<p>アカウントをお持ちすか？　<%= link_to "ログインする", new_user_session_path %></p>

<%= render 'layouts/footer' %>
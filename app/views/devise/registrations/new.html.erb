<%= render "devise/shared/error_messages", resource: resource %>

<div class="container">
  <div class="row justify-content-center">
    <div class="border border-secondary text-center p-5 my-5">
      <h4 class="text-secondary mb-5">
        アカウントを作成
      </h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group pb-2 mx-5">
          <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス" , autocomplete: "email", class:"form-control" %>
        </div>

        <div class="form-group pb-2 mx-5">
          <%= f.text_field :name, placeholder:"ユーザーネーム", class:"form-control"  %>
        </div>

        <div class="form-group pb-3 mx-5">
          <%= f.password_field :password, placeholder:"パスワード" , autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="form-group mx-5">
          <%= f.submit "登録する", class:"btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="row justify-content-center mb-5">
    <p>
      アカウントをお持ちすか？
      <%= link_to "ログインする", new_user_session_path %>
    </p>
  </div>
</div>

<%= render 'layouts/footer' %>